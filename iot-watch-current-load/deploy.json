{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "variables": {
    "Unique ID": "[uniqueString(concat(resourceGroup().id, 'iot'))]",
    "Hub Name": "[concat('iot-hub-', variables('Unique ID'))]",
    "Hub Writer": "iothubowner",
    "Hub Reader": "hubReader",
    "App Insights Name": "[concat('app-insights-', variables('Unique ID'))]",
    "Streaming Job Name": "[concat('streaming-', variables('Unique ID'))]",
    "Cosmos Account Name": "[concat('cosmos-', variables('Unique ID'))]",
    "Cosmos Db Name": "operationDb",
    "Cosmos Container": "telemetry"
  },
  "resources": [
    {
      "type": "Microsoft.Devices/IotHubs",
      "apiVersion": "2019-11-04",
      "name": "[variables('Hub Name')]",
      "location": "[resourceGroup().location]",
      "tags": {
        "uniqueId": "[variables('Unique ID')]"
      },
      "sku": {
        "name": "B3",
        "tier": "Basic",
        "capacity": 1
      },
      "properties": {
        "authorizationPolicies": [
          {
            "keyName": "[variables('Hub Writer')]",
            "rights": "RegistryWrite, ServiceConnect, DeviceConnect"
          },
          {
            "keyName": "[variables('Hub Reader')]",
            "rights": "RegistryRead, ServiceConnect"
          }
        ],
        "ipFilterRules": [
        ],
        "eventHubEndpoints": {
          "events": {
            "retentionTimeInDays": 1,
            "partitionCount": 32
          }
        },
        "routing": {
          "endpoints": {
            "serviceBusQueues": [
            ],
            "serviceBusTopics": [
            ],
            "eventHubs": [
            ],
            "storageContainers": [
            ]
          },
          "routes": [
          ],
          "fallbackRoute": {
            "name": "$fallback",
            "source": "DeviceMessages",
            "condition": "true",
            "endpointNames": [
              "events"
            ],
            "isEnabled": true
          }
        },
        "storageEndpoints": {
        },
        "messagingEndpoints": {
        },
        "enableFileUploadNotifications": false,
        "cloudToDevice": {
          "maxDeliveryCount": 10,
          "defaultTtlAsIso8601": "PT1H",
          "feedback": {
            "lockDurationAsIso8601": "PT1M",
            "ttlAsIso8601": "PT1H",
            "maxDeliveryCount": 10
          }
        },
        "features": "None"
      }
    },
    {
      "type": "Microsoft.Insights/components",
      "name": "[variables('App Insights Name')]",
      "apiVersion": "2015-05-01",
      "location": "[resourceGroup().location]",
      "tags": {
      },
      "kind": "web",
      "properties": {
        "Application_Type": "web"
      },
      "dependsOn": [
      ]
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2019-12-12",
      "kind": "GlobalDocumentDB",
      "name": "[variables('Cosmos Account Name')]",
      "tags": {
        "defaultExperience": "DocumentDB"
      },
      "location": "[resourceGroup().location]",
      "properties": {
        "name": "[variables('Cosmos Account Name')]",
        "databaseAccountOfferType": "Standard",
        "consistencyPolicy": {
          "defaultConsistencyLevel": "Eventual",
          "maxStalenessPrefix": "10",
          "maxIntervalInSeconds": "5"
        }
      },
      "resources": [
        {
          "type": "sqlDatabases",
          "apiVersion": "2019-12-12",
          "name": "[variables('Cosmos Db Name')]",
          "dependsOn": [
            "[resourceId('Microsoft.DocumentDB/databaseAccounts', variables('Cosmos Account Name'))]"
          ],
          "properties": {
            "resource": {
              "id": "[variables('Cosmos Db Name')]"
            },
            "options": {
            }
          },
          "resources": [
            {
              "name": "[variables('Cosmos Container')]",
              "type": "containers",
              "apiVersion": "2019-12-12",
              "dependsOn": [
                "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlDatabases', variables('Cosmos Account Name'), variables('Cosmos Db Name'))]"
              ],
              "properties": {
                "resource": {
                  "id": "[variables('Cosmos Container')]",
                  "partitionKey": {
                    "paths": [
                      "/deviceId"
                    ],
                    "kind": "Hash"
                  },
                  "indexingPolicy": {
                    "indexingMode": "consistent",
                    "includedPaths": [
                      {
                        "path": "/*"
                      }
                    ],
                    "excludedPaths": [
                    ]
                  },
                  "defaultTtl": 3600
                }
              }
            }
          ]
        }
      ]
    },
    {
      "type": "Microsoft.StreamAnalytics/StreamingJobs",
      "apiVersion": "2016-03-01",
      "name": "[variables('Streaming Job Name')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Devices/IotHubs', variables('Hub Name'))]",
        "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlDatabases/containers', variables('Cosmos Account Name'), variables('Cosmos Db Name'), variables('Cosmos Container'))]"
      ],
      "properties": {
        "sku": {
          "name": "standard"
        },
        "outputStartMode": "JobStartTime",
        "outputErrorPolicy": "stop",
        "eventsOutOfOrderPolicy": "adjust",
        "eventsOutOfOrderMaxDelayInSeconds": 0,
        "eventsLateArrivalMaxDelayInSeconds": 5,
        "dataLocale": "en-US",
        "inputs": [
          {
            "name": "hub",
            "properties": {
              "type": "Stream",
              "datasource": {
                "type": "Microsoft.Devices/IotHubs",
                "properties": {
                  "iotHubNamespace": "[variables('Hub Name')]",
                  "sharedAccessPolicyName": "[variables('Hub Reader')]",
                  "sharedAccessPolicyKey": "[listKeys(resourceId('Microsoft.Devices/IotHubs', variables('Hub Name')), '2019-11-04').value[1].primaryKey]",
                  "endpoint": "messages/events",
                  "consumerGroupName": "$Default"
                }
              },
              "serialization": {
                "type": "Json",
                "properties": {
                  "encoding": "UTF8"
                }
              }
            }
          }
        ],
        "outputs": [
          {
            "name": "cosmos",
            "properties": {
              "datasource": {
                "type": "Microsoft.Storage/DocumentDB",
                "properties": {
                  "accountId": "[variables('Cosmos Account Name')]",
                  "database": "[variables('Cosmos Db Name')]",
                  "collectionNamePattern": "[variables('Cosmos Container')]",
                  "accountKey": "[listKeys(resourceId('Microsoft.DocumentDB/databaseAccounts', variables('Cosmos Account Name')), '2019-12-12').primaryMasterKey]"
                }
              }
            }
          }
        ],
        "transformation": {
          "name": "Transformation",
          "properties": {
            "streamingUnits": 1,
            "query": "SELECT * INTO cosmos FROM hub"
          }
        }
      }
    }
  ],
  "outputs": {
    "q": {
      "type": "object",
      "value": "[listKeys(resourceId('Microsoft.DocumentDB/databaseAccounts', variables('Cosmos Account Name')), '2019-12-12')]"
    }
  }
}